<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.NoteAddingPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Title" TextColor="Black"/>
            <Entry Placeholder="Text" TextColor="Black"/>
            <Entry Placeholder="Current date" TextColor="Black"/>

            <StackLayout Orientation="Horizontal">
                <Button Text="Save" Margin="100, 0, 10,30"/>
                <Button Text="Cancel" Margin="10, 0,30,30"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>