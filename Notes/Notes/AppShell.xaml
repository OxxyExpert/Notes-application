<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.AppShell"
       xmlns:views="clr-namespace:Notes.Views">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="DodgerBlue"  Padding="20">
                <Label Text="Notes application"
                       FontSize="24"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem Title="Notes" Icon="notes.png">
        <ShellContent
            ContentTemplate="{DataTemplate views:NotesPage}">
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="About program" Icon="about.png">
        <ShellContent
            ContentTemplate="{DataTemplate views:AboutAppPage}">
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Basket" Icon="trash.png">
        <ShellContent
            ContentTemplate="{DataTemplate views:BasketPage}">
        </ShellContent>
    </FlyoutItem>
</Shell>